<?php
require_once __DIR__ . '/../../../config/bootstrap.php';

//$organization_id   = 'org_******';
//$location_id       = 'loc_******';
//$api_access_id     = '********************************';
//$api_secure_key    = '********************************';
    $organization_id = forte_prefixed_post('organization_id', 'org_', 'organization_id');
    $location_id = forte_prefixed_post('location_id', 'loc_', 'location_id');
    $api_access_id = forte_post_value('api_access_id', 'api_access_id');
    $api_secure_key = forte_post_value('api_secure_key', 'api_secure_key');

//capture the data posted from the form
$start_date        = $_POST['s_year'].'-'.$_POST['s_month'].'-'.$_POST['s_day'];
$end_date          = $_POST['e_year'].'-'.$_POST['e_month'].'-'.$_POST['e_day'];
$sendto            = $_POST['sendto_email'];
$merchant_name     = $_POST['merchant_name'];
    $base_url = forte_base_url();
$auth_token        = base64_encode($api_access_id . ':' . $api_secure_key);
$endpoint          = $base_url . '/organizations/' . $organization_id . '/locations/' . $location_id . '/paymethods/?filter=start_au_updated_date+eq+' . $start_date . '+and+end_au_updated_date+eq+' . $end_date . '&page_size=1000';
$which_option      = $_POST['option'];
 

//if PDF selected
if(isset($_POST['pdf']) AND ($which_option == "download")) {
	@include('UPDATER-pdf.download.php');
}
	elseif(isset($_POST['pdf']) AND ($which_option == "email")) {
		@include('UPDATER-pdf.email.php');
		@include('UPDATER-email.php');
		header('Location: http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');
	}
	elseif(isset($_POST['pdf']) AND ($which_option == "both")) {
		@include('UPDATER-pdf.both.php');
		@include('UPDATER-email.php');
	}

	
//if CSV selected	
if(isset($_POST['csv']) AND ($which_option == "download")) {
	@include('UPDATER-csv.download.php');
}
	elseif(isset($_POST['csv']) AND ($which_option == "email")) {
		@include('UPDATER-csv.email.php');
		@include('UPDATER-email.php');
		header('Location: http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');
	}
	elseif(isset($_POST['csv']) AND ($which_option == "both")) {
		@include('UPDATER-csv.both.php');
		header('Location: http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');
		@include('UPDATER-email.both.php');
		//header('Location: http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');
		//echo "<script>window.location('http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');</script>";
		echo "<script>alert('Your email has been sent');</script>";
	}

	
//if XML selected
if(isset($_POST['xml']) AND ($which_option == "download")) {
	@include('UPDATER-xml.download.php');
}
	elseif(isset($_POST['xml']) AND ($which_option == "email")) {
		@include('UPDATER-xml.email.php');
		@include('UPDATER-email.php');
		header('Location: http://www.calligraphydallas.com/updater/UPDATER-email.sent.php');
	}
	elseif(isset($_POST['xml']) AND ($which_option == "both")) {
		@include('UPDATER-xml.both.php');
		@include('UPDATER-email.php');
	}
?>
